
<div class='page-header'>
  <h1>Directors</h1>
</div>

<a href='/directors/new_form' class='btn'>Add a new director</a>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Date of Birth</th>
      <th>Biography</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% @directors.each do |director| %>
      <tr>
        <td><%= director.image_url %></td>
        <td><%= director.name %></td>
        <td><%= director.dob %></td>
        <td><%= truncate(director.bio, length: 50) %></td>
        <td>
          <a href="/directors/<%= director.id %>" class='btn'>Show details</a>
          <a href="/directors/<%= director.id %>/edit" class='btn'>Edit director</a>
          <a href="/directors/delete_director/<%= director.id%>" class='btn'>Delete director</a>
        </td>
      </tr>
    <% end %>
    
  </tbody>
</table>

