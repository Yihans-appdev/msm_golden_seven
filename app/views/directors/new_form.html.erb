<div class='page-header'>
  <h1>Add a new director</h1>
</div>


<form action='/directors/create_director'>
  <div class='form-group'>
    <label for="name" class="col-sm-2 control-label">Director Name</label>
    <div class="col-sm-10">
      <input type='text' id='name' name='name' class='form-control' placeholder="Director name">
    </div>
  </div>
    
  <div class='form-group'>
    <label for='Dob' class="col-sm-2 control-label">Date of Birth</label>
    <div class='col-sm-10'>
      <input type='text' id='Dob' name='Dob' class='form-control' placeholder="Date of birth">
    </div>
    
    <label for='image_url' class="col-sm-2 control-label">Image url</label>
    <div class="col-sm-10">
      <input type='text' id='image_url' name='image_url' placeholder="Add the url of an image of the director">
    </div>
    
    <label for='Bio' class="col-sm-2 control-label">Director biography</label>
    <div class="col-sm-10">
      <textarea id='Bio' name='Bio' placeholder="Biography" rows="5"></textarea>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create director" class="btn btn-primary">
    </div>
  
  </div>
  
</form>