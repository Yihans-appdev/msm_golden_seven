<div class='page-header'>
  <h1>Edit Movie</h1>
</div>

<form action="/movies/<%= @movie.id %>/update">
    <div class='form-group'>
    <label for="title" class="col-sm-2 control-label">Movie Title</label>
    <div class="col-sm-10">
      <input type='text' id='title' name='title' class='form-control' value='<%= @movie.title %>'>
    </div>
  </div>
    
  <div class='form-group'>
    <label for='year' class="col-sm-2 control-label">Year</label>
    <div class='col-sm-10'>
      <input type='text' id='year' name='year' class='form-control'  value='<%= @movie.year %>'>
    </div>
    
    <label for='duration' class="col-sm-2 control-label">Duration</label>
    <div class='col-sm-10'>
      <input type='text' id='duration' name='duration' class='form-control'  value='<%= @movie.duration %>'>
    </div>
    
    <label for='image_url' class="col-sm-2 control-label">Image url</label>
    <div class="col-sm-10">
      <input type='text' id='image_url' name='image_url'  value='<%= @movie.image_url %>'>
    </div>
    
    <label for='description' class="col-sm-2 control-label">movie description</label>
    <div class="col-sm-10">
      <textarea id='description' name='description' placeholder="Description" rows="5"><%= @movie.description %></textarea>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update movie" class="btn btn-primary">
    </div>
  
  </div>
  
</form>